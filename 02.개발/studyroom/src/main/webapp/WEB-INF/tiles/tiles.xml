<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
        <definition name="index" template="/WEB-INF/layout/indexLayout.jsp">
                <put-attribute name="header" value="/WEB-INF/layout/indexHeader.jsp" />
                <put-attribute name="footer" value="/WEB-INF/layout/indexFooter.jsp" />
        </definition>

        <definition name="index/*" extends="index">
                <put-attribute name="contents" value="/WEB-INF/view/{1}.jsp" />
        </definition>
        
        <definition name="index/*/*" extends="index">
                <put-attribute name="contents" value="/WEB-INF/view/{1}/{2}.jsp" />
        </definition>
 
        <definition name="index/*/*/*" extends="index">
                <put-attribute name="contents" value="/WEB-INF/view/{1}/{2}/{3}.jsp" />
        </definition>
</tiles-definitions>